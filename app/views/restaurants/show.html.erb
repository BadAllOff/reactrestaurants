<div class="row">
  <h1><%= @restaurant.name %></h1>
</div>
<div class="row">
  <div class="columns medium-12">
    <p>
      <%= @restaurant.description %>
    </p>
  </div>
</div>
<div class="row">
  <div class="columns medium-12">
    <h3>
      Comments
    </h3>
      <%= react_component('CommentSection', restaurantId: @restaurant.id, comments: raw(render(template: 'comments/index.json.jbuilder'))) %>
  </div>
</div>